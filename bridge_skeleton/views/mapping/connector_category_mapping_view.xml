<odoo>
    <record id="connector_category_form" model="ir.ui.view">
        <field name="name">connector.category.mapping.form</field>
        <field name="model">connector.category.mapping</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Category Mapping" create="false" edit="false">
                <group>
                    <field name="name" readonly="1" />
                    <field name="odoo_id" readonly="1" />
                    <field name="ecomm_id" readonly="1" />
                    <field name="need_sync" widget="boolean_toggle" />
                </group>
            </form>
        </field>
    </record>

    <record id="connector_category_tree" model="ir.ui.view">
        <field name="name">connector.category.mapping.tree</field>
        <field name="model">connector.category.mapping</field>
        <field name="arch" type="xml">
            <list create="false" string="Category Mapping" decoration-danger="need_sync==True">
                <field name="id" optional="hide" />
                <field name="name" />
                <field name="odoo_id" />
                <field name="ecomm_id" />
                <field name="instance_id" optional="show" />
                <field name="ecommerce_channel" readonly="1" optional="hide" />
                <field name="created_by" readonly="1" optional="show" />
                <field name="create_date" readonly="1" optional="show" />
                <field name="write_date" readonly="1" optional="hide" />
                <field name="need_sync" widget="boolean_toggle" />
            </list>
        </field>
    </record>

    <record id="view_connector_product_category_calendar" model="ir.ui.view">
        <field name="name">connector.category.mapping.calendar</field>
        <field name="model">connector.category.mapping</field>
        <field name="arch" type="xml">
            <calendar string="Product Category Mapping" date_start="create_date"
                color="ecommerce_channel" hide_time="true" event_limit="5">
                <field name="create_uid" avatar_field="avatar_128" />
                <field name="name" />
                <field name="odoo_id" />
                <field name="ecomm_id" />
                <field name="created_by" />
                <field name="ecommerce_channel" filters="1" invisible="1" />
                <field name="instance_id" filters="1" invisible="1" />
            </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="view_connector_product_category_graph">
        <field name="name">connector.category.mapping.graph</field>
        <field name="model">connector.category.mapping</field>
        <field name="arch" type="xml">
            <graph string="Product Category Mapping" sample="1">
                <field name="create_date" interval="month" type="row" />
                <field name="instance_id" type="row" />
                <field name="ecommerce_channel" type="row" />
            </graph>
        </field>
    </record>

    <record id="connector_category_search" model="ir.ui.view">
        <field name="name">connector.category.mapping.search</field>
        <field name="model">connector.category.mapping</field>
        <field name="arch" type="xml">
            <search string="Category">
                <field name="name" filter_domain="[('name','ilike',self)]" />
                <field name="odoo_id" />
                <field name="ecomm_id" />
                <group expand="0" string="Group By">
                    <filter string="Channel" name="group_by_ecomm"
                        context="{'group_by':'ecommerce_channel'}" />
                    <filter string="Instance" name="group_by_instance"
                        context="{'group_by':'instance_id'}" />
                    <filter string="Need Sync" name="needsync" domain="[]"
                        context="{'group_by':'need_sync'}" />
                    <filter string="Created By" name="createby" domain="[]"
                        context="{'group_by':'created_by'}" />
                    <filter string="Sync Date" name="group_by_create_date" domain="[]"
                        context="{'group_by': 'create_date'}" />
                </group>
                <searchpanel>
                    <field name="instance_id" string="Instances" enable_counters="1" />
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="connector_category_tree_action" model="ir.actions.act_window">
        <field name="name">Ecomm Category Mapping</field>
        <field name="res_model">connector.category.mapping</field>
        <field name="view_mode">list,form,calendar,graph</field>
        <field name="search_view_id" ref="connector_category_search" />
        <field name="view_id" ref="connector_category_tree" />
    </record>
</odoo>