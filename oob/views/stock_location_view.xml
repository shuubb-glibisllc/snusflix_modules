<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit stock.location form view to add OpenCart sync field -->
    <record id="view_location_form_opencart" model="ir.ui.view">
        <field name="name">stock.location.form.opencart</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <field name="usage" position="after">
                <field name="opencart_sync" attrs="{'invisible': [('usage', 'not in', ['internal', 'transit'])]}"/>
            </field>
        </field>
    </record>

    <!-- Inherit stock.location tree view to show OpenCart sync field -->
    <record id="view_location_tree_opencart" model="ir.ui.view">
        <field name="name">stock.location.tree.opencart</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_tree2"/>
        <field name="arch" type="xml">
            <field name="usage" position="after">
                <field name="opencart_sync"/>
            </field>
        </field>
    </record>

</odoo>